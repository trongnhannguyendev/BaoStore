            android:name=".activities.ChangePassActivity"
            android:exported="false" />
        <activity
            android:name=".activities.UserInforActivity"
            android:exported="false" />
        <activity
            android:name=".activities.MainActivity"
            android:exported="false" />
    </application>

</manifest>