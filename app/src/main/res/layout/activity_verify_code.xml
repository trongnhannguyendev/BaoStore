<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CodeVerifyActivity">





    <LinearLayout
        android:id="@+id/ll_verifycode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center">

        <EditText
            android:id="@+id/edCode1"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"/>
        <EditText
            android:id="@+id/edCode2"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"/>
        <EditText
            android:id="@+id/edCode3"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1" />
        <EditText
            android:id="@+id/edCode4"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="1"/>

    </LinearLayout>

    <Button
        android:id="@+id/btnVerifyCode_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_verifycode"
        android:layout_centerHorizontal="true"
        android:text="Verify"/>
</RelativeLayout>