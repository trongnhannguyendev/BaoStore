<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChangePassActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_header">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/myToolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="Thay đổi mật khẩu"
            android:layout_gravity="center"
            app:navigationIcon="@drawable/ic_arrow_back" />

    </com.google.android.material.appbar.AppBarLayout>

    
    <View
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/topAppBar"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="8dp"
        android:background="@drawable/custom_form_1"/>
    
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfOldPassword_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/topAppBar"
        app:boxCornerRadiusBottomEnd="48dp"
        app:boxCornerRadiusBottomStart="48dp"
        app:boxCornerRadiusTopEnd="48dp"
        app:boxCornerRadiusTopStart="48dp"
        android:hint="Mật khẩu cũ"
        app:boxBackgroundColor="@color/white"
        app:startIconTint="@color/black"
        app:endIconMode="password_toggle"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfNewPassword_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/tfOldPassword_Change"
        app:boxCornerRadiusBottomEnd="48dp"
        app:boxCornerRadiusBottomStart="48dp"
        app:boxCornerRadiusTopEnd="48dp"
        app:boxCornerRadiusTopStart="48dp"
        app:boxBackgroundColor="@color/white"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Mật khẩu mới"
        app:startIconTint="@color/black"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tfNewRePassword_Change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_below="@+id/tfNewPassword_Change"
        app:boxCornerRadiusBottomEnd="48dp"
        app:boxCornerRadiusBottomStart="48dp"
        app:boxCornerRadiusTopEnd="48dp"
        app:boxCornerRadiusTopStart="48dp"
        app:boxBackgroundColor="@color/white"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="Nhập lại mật khẩu mới"
        app:startIconTint="@color/black"
        app:endIconMode="password_toggle">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangePass"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@null"
        app:backgroundTint="@null"
        android:background="@drawable/custom_button_1"
        android:text="Thay đổi"/>

</RelativeLayout>