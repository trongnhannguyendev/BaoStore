<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.SuccessActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/baseline_check_circle_24"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="86dp" />

    <TextView
        android:id="@+id/tvTextSuccess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/imageView2"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textColor="#3CB879"
        android:text="Thanh toán thành công"/>

    <TextView
        android:id="@+id/tvinfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginHorizontal="32dp"
        android:layout_below="@+id/tvTextSuccess"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:text="BaoStore sẽ sớm liên hệ với quý khách để bàn giao sản phẩm, dịch vụ"/>

    <androidx.constraintlayout.utils.widget.MotionButton
        android:id="@+id/btnGoBack_ps"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_below="@+id/tvinfo"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button_1"
        android:text="@string/button_confirm"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold" />
</RelativeLayout>