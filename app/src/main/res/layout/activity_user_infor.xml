<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".activities.UserInforActivity">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/custom_header"
        android:gravity="center|bottom"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/custom_arrow_back"
                android:src="@drawable/arrow_back" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Thông tin cá nhân"
                android:textColor="@color/black"
                android:textSize="24dp"
                android:textStyle="bold|italic" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeader"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/custom_card"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:background="@drawable/custom_button_1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sửa"
                android:textSize="16dp"
                android:drawableTint="@color/black"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableStart="@drawable/ic_edit"


                />
        </LinearLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_form_2"
            android:drawableStart="@drawable/ic_person_3"
            android:drawablePadding="10dp"
            android:enabled="false"
            android:text="Nguyen Van A"
            android:paddingLeft="8dp"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:enabled="false"
            android:background="@drawable/custom_form_2"
            android:drawableStart="@drawable/ic_phone"
            android:drawablePadding="10dp"
            android:text="0123456789"
            android:paddingLeft="8dp"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_form_2"
            android:drawableStart="@drawable/ic_address"
            android:enabled="false"
            android:drawablePadding="10dp"
            android:text="123 Âu cơ, quận Tân Bình, TP HCM"



            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_form_2"
            android:drawableStart="@drawable/ic_mail_2"
            android:drawablePadding="10dp"
            android:enabled="false"
           android:text="nguyenvana123@gmail.com"
            android:paddingLeft="8dp"
            android:textSize="20dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center">

        <androidx.constraintlayout.utils.widget.MotionButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_1"
            android:text="Xác nhận"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </LinearLayout>
</RelativeLayout>