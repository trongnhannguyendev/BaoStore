<resources>
    <!-- Base application theme. -->
    <style name="BaoStore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#3F51B5</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/teal_700</item>
        <!-- Customize your theme here. -->

        <item name="android:navigationBarColor">@color/black</item>

    </style>

    <style name="headerBackground" parent="BaoStore">
        <item name="android:background">@drawable/custom_header</item>
    </style>

    <style name="acceptButton" parent="android:Widget.Button">
        <item name="android:background">@drawable/custom_button_1</item>
    </style>


    <style name="OverlayThemeLime" parent="BaoStore">
        <item name="colorPrimary">@color/md_lime_500</item>
        <item name="colorPrimaryDark">@color/md_lime_700</item>
        <item name="colorAccent">@color/md_amber_A400</item>
    </style>

    <style name="OverlayThemeGreen" parent="BaoStore">
        <item name="colorPrimary">@color/md_green_500</item>
        <item name="colorPrimaryDark">@color/md_green_700</item>
        <item name="colorAccent">@color/md_pink_A400</item>
    </style>


</resources>